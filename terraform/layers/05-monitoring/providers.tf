# Layer 05: Monitoring - Terraform Configuration

terraform {
  required_version = ">= 1.14.0"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 6.30"
    }
  }
}

provider "aws" {
  region = var.aws_region

  default_tags {
    tags = {
      Project     = var.project_name
      Environment = var.environment
      Layer       = "monitoring"
      ManagedBy   = "Terraform"
    }
  }
}
